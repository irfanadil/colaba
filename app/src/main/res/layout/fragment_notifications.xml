<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colaba_loan_background">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notification_recycle_view"
        android:layout_width="match_parent"
        android:layout_marginTop="90dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/colaba_loan_background"
        android:clipToPadding="false"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/bAppDownPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/rubik_medium"
        android:textSize="20sp"
        android:textColor="@color/grey_color_one"
        android:textStyle="bold"
        android:text="@string/notifications" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/newNotificationButton"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|bottom"
        android:textAllCaps="false"
        android:visibility="invisible"
        android:layout_marginBottom="46dp"
        android:background="@drawable/app_button_style"
        android:text="@string/see_new_notifications"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:fontFamily="@font/rubik_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>