<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_cell_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="28dp"
    android:background="@drawable/irfan_content_bg_with_drop_shadow">


    <TextView
        android:id="@+id/selectedDocTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:lines="1"
        android:singleLine="true"
        android:fontFamily="@font/rubik_regular"
        android:textSize="15sp"
        android:textColor="@color/grey_color_one"
        android:text="Bank Statements"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selectedDocDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:maxLines="5"
        android:singleLine="false"
        android:fontFamily="@font/rubik_regular"
        android:textSize="13sp"
        android:textColor="@color/grey_color_two"
        android:text="Please provide 2 most recent month's bank statement with sufficient funds for cash to close."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedDocTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>

