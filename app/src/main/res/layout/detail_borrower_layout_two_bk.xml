    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/content_bg_with_drop_shadow"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:elevation="8dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userLayout3">

        <TextView
            android:id="@+id/loanPurpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/rubik_medium"
            android:text="Purchase"
            android:textColor="@color/grey_color_one"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/rubik_regular"
            android:src="@drawable/ic_location_svg"
            android:text="Address"
            android:textColor="@color/grey_color_two"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/loanPurpose"
            app:layout_constraintTop_toBottomOf="@+id/loanPurpose" />

        <TextView
            android:id="@+id/completeAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/rubik_regular"
            android:maxLines="2"
            android:singleLine="false"
            android:text=""
            android:textColor="@color/grey_color_one"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView18"
            app:layout_constraintTop_toTopOf="@+id/textView18" />

        <TextView
            android:id="@+id/borrowerPropertyType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/rubik_regular"
            android:text="  "
            android:textColor="@color/grey_color_two"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/completeAddress"
            app:layout_constraintTop_toBottomOf="@+id/completeAddress" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/circle_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/borrowerPropertyType"
            app:layout_constraintStart_toEndOf="@+id/borrowerPropertyType"
            app:layout_constraintTop_toTopOf="@+id/borrowerPropertyType"
            app:srcCompat="@drawable/circle_grey" />

        <TextView
            android:id="@+id/propertyUsageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/rubik_regular"
            android:text=" "
            android:textColor="@color/grey_color_two"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/circle_icon"
            app:layout_constraintTop_toTopOf="@+id/borrowerPropertyType" />

        <View
            android:id="@+id/border_end"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/loan_view_holder_separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/borrowerPropertyType" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="30dp"
            android:text="Property Value"
            android:textColor="@color/grey_color_two"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/borrowerPropertyType"
            app:layout_constraintTop_toBottomOf="@+id/propertyValue" />

        <TextView
            android:id="@+id/propertyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/rubik_regular"
            android:text="$0"
            android:textColor="@color/grey_color_one"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView22"
            app:layout_constraintTop_toBottomOf="@+id/border_end" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Down Payment"
            android:textColor="@color/grey_color_two"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/downPayment"
            app:layout_constraintTop_toTopOf="@+id/textView22" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Loan Amount"
            android:textColor="@color/grey_color_two"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageView37"
            app:layout_constraintTop_toTopOf="@+id/textView22" />

        <TextView
            android:id="@+id/loanPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/rubik_medium"
            android:text="$0"
            android:textColor="@color/grey_color_one"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/imageView37"
            app:layout_constraintTop_toTopOf="@+id/propertyValue" />

        <TextView
            android:id="@+id/downPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/rubik_medium"
            android:text="$0"
            android:textColor="@color/grey_color_one"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/textView25"
            app:layout_constraintStart_toEndOf="@+id/imageView38" />

        <TextView
            android:id="@+id/loanGoalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/rubik_regular"
            android:text="- "
            android:textColor="@color/grey_color_one"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/loanPurpose"
            app:layout_constraintStart_toEndOf="@+id/loanPurpose"
            app:layout_constraintTop_toTopOf="@+id/loanPurpose" />

        <ImageView
            android:id="@+id/imageView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/propertyValue"
            app:srcCompat="@drawable/ic_dollar_home_svg" />

        <ImageView
            android:id="@+id/imageView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            app:layout_constraintStart_toEndOf="@+id/textView22"
            app:layout_constraintTop_toTopOf="@+id/loanPayment"
            app:srcCompat="@drawable/ic_dollar_bag_svg" />

        <ImageView
            android:id="@+id/imageView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            app:layout_constraintStart_toEndOf="@+id/textView24"
            app:layout_constraintTop_toTopOf="@+id/imageView37"
            app:srcCompat="@drawable/ic_dollar_arc_svg" />

        <TextView
            android:id="@+id/percentageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/rubik_regular"
            android:text=""
            android:textColor="@color/grey_color_one"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/downPayment"
            app:layout_constraintStart_toEndOf="@+id/downPayment"
            app:layout_constraintTop_toTopOf="@+id/downPayment" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>