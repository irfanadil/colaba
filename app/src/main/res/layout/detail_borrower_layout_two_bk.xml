        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    <LinearLayout
        android:id="@+id/borrower_top_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/borrower_overview_background"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/mainBorrowerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/rubik_medium"
            android:text=""
            android:textColor="@color/grey_color_one"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/coBorrowerNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/rubik_light"
            android:maxLines="1"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/grey_color_two"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/loanId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/rubik_regular"
            android:text=""
            android:textColor="@color/grey_color_two"
            android:textSize="14sp"
            android:visibility="gone" />

