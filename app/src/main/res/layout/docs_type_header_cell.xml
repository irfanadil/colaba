<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">




        <TextView
            android:id="@+id/cell_header_title"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Bank Account"
            android:gravity="start"
           android:fontFamily="@font/rubik_regular"
            android:textColor="@color/grey_color_one"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/items_selected_imageview"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/docs_arrow_down"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.515"
            app:srcCompat="@drawable/ic_circle_blue" />

        <TextView
            android:id="@+id/total_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_regular"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/items_selected_imageview"
            app:layout_constraintEnd_toEndOf="@+id/items_selected_imageview"
            app:layout_constraintStart_toStartOf="@+id/items_selected_imageview"
            app:layout_constraintTop_toTopOf="@+id/items_selected_imageview" />


        <ImageView
            android:id="@+id/docs_arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"

            app:layout_constraintBottom_toBottomOf="@+id/items_selected_imageview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/items_selected_imageview"
            app:srcCompat="@drawable/ic_down_arrow"
            app:tint="@color/grey_color_two" />

        <ImageView
            android:id="@+id/docs_arrow_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/items_selected_imageview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/items_selected_imageview"
            app:srcCompat="@drawable/ic_up_arrow"
             />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/tab_top_border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/asset_cell_separator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>